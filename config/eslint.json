{
  "env": {
    "browser": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "bowser": "readonly",
    "I18n": "readonly",
    "L": "readonly",
    "OSM": "writable",
    "Piwik": "readonly",
    "querystring": "readonly",
    "require": "readonly",
    "updateLinks": "readonly"
  },
  "rules": {
    "eqeqeq": ["error", "smart"],
    "no-caller": "error",
    "no-extend-native": "error",
    "no-new": "error",
    "no-trailing-spaces": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-use-before-define": ["error", {"functions": false}],
    "semi": ["error", "always"]
  }
}
